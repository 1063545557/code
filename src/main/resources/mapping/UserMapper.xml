<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo1.mapper.UserMapper">
    <resultMap id="resultMap" type="com.example.demo1.entity.User">
        <result property="username" column="username"/>
        <result property="userId" column="user_id"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <association property="role" column="user_id" javaType="com.example.demo1.entity.Role" select="com.example.demo1.mapper.RoleMapper.selectRole">
        </association>
    </resultMap>
    <select id="selectUser" resultMap="resultMap">
        select username,user_id,phone,email,role_id,name,level,description from sys_user left join sys_role on user_id=role_id;
    </select>

</mapper>